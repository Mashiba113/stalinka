
document.getElementById("menu-toggle").addEventListener("click", function(){
    let menu = document.getElementById("dropdown-content");
    if(menu.classList.contains("active1")){
        menu.classList.remove("active1");
        menu.classList.add("hidden1");

        setTimeout(() => {
            menu.style.display = "none";
        }, 1000);

    }else{
        menu.style.display = "block";
        menu.classList.remove("hidden1");
        menu.classList.add("active1");

    }



});






const T26full = document.getElementById("T26two");
const T26 = document.getElementById("T26");
const list = document.getElementById("mainExe");
const header = document.getElementById("PC")
const body = document.body;
const mediaQuery = window.matchMedia('(min-width: 500px)');

function handleMediaChange(e) {
    if (e.matches) {
      
    
T26.addEventListener("click", (event) => {
    event.stopPropagation(); // Останавливаем всплытие, чтобы не закрывать тут же
    T26full.style.display = "block";
    list.style.display = "none";
    header.style.display = "none";
    body.style.backgroundImage = 'url("Рисунок8.jpg?v=1")';
    body.style.backgroundSize = 'cover'; 
    body.style.backgroundPosition = 'center';
   

});

// Закрытие меню при клике вне его
document.addEventListener("click", (event) => {
    if (!T26full.contains(event.target) && !T26.contains(event.target) || T26full.contains(event.target) && !T26.contains(event.target)) {
        T26full.style.display = "none";
        list.style.display = "block";
        header.style.display = "block";
        body.style.backgroundImage = 'url("Рисунок7.jpg?v=1")';  
        
    }
});





